{
  "system": {
    "name": "Institutional ML Trading System",
    "version": "1.0.0",
    "environment": "development"
  },
  "ninjatrader": {
    "host": "127.0.0.1",
    "port": 36973,
    "connection_timeout": 10,
    "retry_attempts": 3
  },
  "instruments": {
    "futures": [
      {
        "symbol": "ES 12-24",
        "name": "E-mini S&P 500",
        "tick_size": 0.25,
        "tick_value": 12.50,
        "margin_requirement": 500
      },
      {
        "symbol": "NQ 12-24", 
        "name": "E-mini NASDAQ",
        "tick_size": 0.25,
        "tick_value": 5.00,
        "margin_requirement": 300
      }
    ]
  },
  "trading": {
    "max_position_size": 2,
    "min_confidence": 0.65,
    "risk_per_trade": 0.02,
    "max_daily_trades": 20,
    "max_daily_loss": 0.05,
    "trading_hours": {
      "start": "09:30",
      "end": "16:00",
      "timezone": "US/Eastern"
    }
  },
  "model": {
    "type": "XGBoost",
    "retrain_interval_hours": 24,
    "min_training_samples": 1000,
    "features": [
      "price_momentum",
      "volume_profile",
      "volatility",
      "technical_indicators",
      "market_microstructure"
    ]
  },
  "risk_management": {
    "stop_loss_pct": 0.01,
    "take_profit_pct": 0.02,
    "position_sizing": "kelly_criterion",
    "max_correlation": 0.7,
    "var_limit": 0.05
  },
  "logging": {
    "level": "INFO",
    "file": "trading_system.log",
    "max_file_size": "10MB",
    "backup_count": 5
  }
}
